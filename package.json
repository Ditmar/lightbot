{
  "name": "lightbot-game",
  "version": "0.9.0",
  "description": "Classic LightBot programming puzzle game - A fun way to learn programming concepts",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --dev",
    "build": "npm run clean && npm run build:css && npm run build:js && npm run copy:assets && npm run build:manifest && echo 'Build complete!'",
    "build:css": "node build/build-css.js",
    "build:js": "node build/build-js.js",
    "build:manifest": "node build/generate-manifest.js",
    "copy:assets": "node build/copy-assets.js",
    "clean": "node build/clean.js",
    "verify": "node build/verify-build.js",
    "serve": "node server.js --port 8080",
    "watch": "npm run build && nodemon --watch www/develop --exec \"npm run build\"",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build process completed successfully!' && npm run verify",
    "test": "echo 'No tests specified'"
  },
  "keywords": [
    "lightbot",
    "game",
    "programming",
    "puzzle",
    "educational",
    "canvas",
    "javascript"
  ],
  "author": "Laurent Haan (original), Ditmar (modernization)",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "serve-static": "^1.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "uglify-js": "^3.17.4",
    "clean-css": "^5.3.2",
    "fs-extra": "^11.1.1",
    "chalk": "^4.1.2",
    "glob": "^10.3.10"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ditmar/lightbot.git"
  },
  "homepage": "https://github.com/Ditmar/lightbot#readme",
  "bugs": {
    "url": "https://github.com/Ditmar/lightbot/issues"
  }
}
